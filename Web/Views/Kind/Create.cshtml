@using VerotMorin.PreciousGames.Web.Models.KindModels
@model KindViewModel

@{
    ViewBag.Title = "Nouveau type de jeu";
}

<h2>Ajouter un type de jeu</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
 
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group my-2">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4 form-group text-end">
            @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-secondary" })
            <input class="btn btn-primary" type="submit" value="Créer" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
