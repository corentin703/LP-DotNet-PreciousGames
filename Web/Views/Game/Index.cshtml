@using VerotMorin.PreciousGames.Web.Models.GameModels
@model IndexViewModel

@{
    ViewBag.Title = "Jeux";
}

<h2>Jeux</h2>

<div class="d-flex justify-content-between">
    @Html.ActionLink("Ajouter un jeu", "Create")

    @using (Html.BeginForm("Index", "Game", FormMethod.Get, new { @class = "d-flex text-right" }))
    {
        @Html.LabelFor(model => model.SearchString, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.SearchString, new { @class = "form-control" })
        <input class="btn btn-primary" type="submit" value="Rechercher" />
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Kind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Editor)
        </th>
        <th></th>
    </tr>

    @foreach (GameViewModelFull item in Model.Games)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editor.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<h6>Il y a @Model.GameCount jeu(x) au total.</h6>
