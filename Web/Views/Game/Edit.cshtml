@using VerotMorin.PreciousGames.Web.Models.GameModels
@model GameEditionViewModel

@{
    ViewBag.Title = "Édition jeu";
}

<h2>Éditer un jeu</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Game.Id)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group my-2">
            @Html.LabelFor(model => model.Game.EditorId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.Game.EditorId, Model.Editors, null, new { @class = "form-select" })
        </div>

        <div class="form-group my-2">
            @Html.LabelFor(model => model.Game.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Game.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Game.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group my-2">
            @Html.LabelFor(model => model.Game.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Game.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Game.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group my-2">
            @Html.LabelFor(model => model.Game.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Game.ReleaseDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.Game.ReleaseDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group my-2">
            @Html.LabelFor(model => model.Game.KindId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.Game.KindId, Model.Kinds, null, new { @class = "form-select" })
        </div>

        <div class="mt-4 form-group text-end">
            @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-secondary" })
            <input class="btn btn-primary" type="submit" value="Sauvegarder" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
