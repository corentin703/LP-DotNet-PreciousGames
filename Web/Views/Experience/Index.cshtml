@using VerotMorin.PreciousGames.Web.Models.ExperienceModels
@model IndexViewModel

@{
    ViewBag.Title = "Expériences";
}

<h2>Expériences</h2>

<p>
    @Html.ActionLink("Ajouter une expérience", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Experiences.GetEnumerator().Current.Player)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experiences.GetEnumerator().Current.PlayedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experiences.GetEnumerator().Current.Percentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experiences.GetEnumerator().Current.GameId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Experiences) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayedTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameId)
        </td>
        <td>
            @Html.ActionLink("Édition", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
            @Html.ActionLink("Suppression", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
