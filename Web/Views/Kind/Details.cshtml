@{
    ViewBag.Title = Model.Name;
}

<h2>Détails de @Model.Name</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>

<div class="text-end">
    @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-secondary" })
