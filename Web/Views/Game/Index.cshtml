@using VerotMorin.PreciousGames.Web.Models.GameModels
@model IndexViewModel

@{
    ViewBag.Title = "Jeux";
}

<h2>Jeux</h2>

<p>
    @Html.ActionLink("Ajouter un jeu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Kind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.GetEnumerator().Current.Editor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Games)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editor.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>

<h6>Il y a @Model.GameCount jeu(x) au total.</h6>
