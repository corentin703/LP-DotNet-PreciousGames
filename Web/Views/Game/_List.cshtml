@using VerotMorin.PreciousGames.Web.Models.GameModels
@model IEnumerable<GameViewModelFull>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GetEnumerator().Current.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetEnumerator().Current.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetEnumerator().Current.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetEnumerator().Current.Kind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetEnumerator().Current.Editor)
        </th>
        <th></th>
    </tr>

    @foreach (GameViewModelFull item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editor.Id)
            </td>
            <td>
                @Html.ActionLink("Évaluations", "Index", "Evaluation", new { gameId = item.Id, }, null) |
                @Html.ActionLink("Expériences", "Index", "Experience", new { gameId = item.Id, }, null) |
                @Html.ActionLink("Éditer", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
