@using VerotMorin.PreciousGames.Web.Models.EditorModels
@model EditorViewModel

@{
    ViewBag.Title = $"Supprimer {Model.Name}";
}

<h2>Supprimer @Model.Name</h2>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)

    <h6 class="my-2">
        Êtes-vous sûr ? <br />
        Tous les jeux de cet éditeur seront supprimés dans le même temps.
    </h6>

    <div class="text-end">
        <a class="btn btn-secondary" href="@Url.Action("Index")">Retour</a>
        <input class="btn btn-danger" type="submit" value="Supprimer" />
    </div>
}
